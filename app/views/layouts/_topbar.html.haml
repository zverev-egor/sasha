              -#%li{class: ('active' if controller_name=='tests')}=link_to "Тесты",tests_path, class: 'navbar-brand'
              -#%li{class: ('active' if controller_name=='scenarios')}=link_to "Сценарий",scenarios_path, class: 'navbar-brand'

