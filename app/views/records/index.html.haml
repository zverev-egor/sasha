%h1 Listing records

%table
  %thead
    %tr
      %th Fio
      %th Number
      %th Data
      %th Time
      %th
      %th
      %th

  %tbody
    - @records.each do |record|
      %tr
        %td= record.fio
        %td= record.number
        %td= record.data
        %td= record.time
        %td= link_to 'Show', record
        %td= link_to 'Edit', edit_record_path(record)
        %td= link_to 'Destroy', record, :method => :delete, :data => { :confirm => 'Are you sure?' }

