%h1.text-center Контакты:
%tbody
-if @contacts.count==0
  %td= link_to 'Новое', new_contact_path, class: "btn btn-primary"
-else
  - @contacts.each do |contact|
    %p= markdown(contact.description)
    - if current_user.try('admin?')
      %td= link_to 'Редактировать', edit_contact_path(contact), class: "btn btn-primary"
      %td= link_to 'Удалить', contact, :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: "btn btn-primary"

